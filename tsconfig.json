{
  "compilerOptions": {
    "target": "es2017",
    "rootDir": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "tests", "src/node_modules/*"],
}
